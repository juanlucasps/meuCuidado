@model IEnumerable<meuCuidado.Dominio.Models.Usuario>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var usuario in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-12" style="margin-bottom: 20px;">
                <a href="@Url.Action("PerfilDetalhado", "Perfil", new { id = usuario.Id })">
                    <div class="card" style="height: 450px;">
                        <img src="https://i.pinimg.com/564x/ac/0f/41/ac0f419e977af681516e00829c5393ee.jpg" alt="Descrição da imagem" class="card-img-top" style="max-width:100%; height:250px; object-fit: cover;" />
                        <div class="card-body" style="padding: 20px;">
                            <h5 class="card-title" style="font-size: 1.25rem;">@usuario.Nome</h5>
                            <p class="card-text" style="font-size: 1rem;">@usuario.Email</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <p>Nenhum usuário encontrado</p>
}
