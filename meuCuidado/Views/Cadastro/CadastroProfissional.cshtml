@model meuCuidado.Dominio.Models.CadastroProfissionalViewModel
@{
    ViewBag.Title = "Cadastro de Profissional";
}

<div class="container">
    <h2>Cadastro de Profissional</h2>

    @using (Html.BeginForm("CadastroProfissional", "Cadastro", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.CPF, "CPF")
            @Html.TextBoxFor(m => m.CPF, new { @class = "form-control", placeholder = "Digite seu CPF", required = "required" })
            @Html.ValidationMessageFor(m => m.CPF, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Genero, "Gênero")
            @Html.DropDownListFor(m => m.Genero, new SelectList(new[] { "Feminino", "Masculino" }), new { @class = "form-control", id = "Genero" })
            @Html.ValidationMessageFor(m => m.Genero, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Foto com Documento")
            <label class="custom-file-upload">
                <input type="file" name="FotoDocumento" accept="image/*" onchange="updateFileName(this, 'fotoDocumentoNome')" />
                Escolher arquivo
            </label>
            <small id="fotoDocumentoNome"></small>
        </div>

        <div class="form-group">
            @Html.Label("Foto do Documento")
            <label class="custom-file-upload">
                <input type="file" name="Documento" accept="image/*" onchange="updateFileName(this, 'documentoNome')" />
                Escolher arquivo
            </label>
            <small id="documentoNome"></small>
        </div>

        <div class="form-group">
            @Html.Label("Certificado de Bons Antecedentes")
            <label class="custom-file-upload">
                <input type="file" name="CertificadoBonsAntecedentes" accept="application/pdf" onchange="updateFileName(this, 'certificadoBonsAntecedentesNome')" />
                Escolher arquivo
            </label>
            <small id="certificadoBonsAntecedentesNome"></small>
        </div>

        <div id="dispensaExercito" class="form-group" style="display:none;">
            @Html.Label("Certificado de Dispensa do Exército")
            <label class="custom-file-upload">
                <input type="file" name="CertificadoDispensa" accept="application/pdf" onchange="updateFileName(this, 'certificadoDispensaNome')" />
                Escolher arquivo
            </label>
            <small id="certificadoDispensaNome"></small>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    }
</div>

@section styles {
    <style>
        input[type="file"] {
            display: none; /* Oculta o botão padrão */
        }

        .custom-file-upload {
            display: inline-block;
            padding: 10px 20px;
            cursor: pointer;
            background-color: #e0f7fa; /* Azul pastel */
            color: #000; /* Cor do texto */
            border: 1px solid #b2ebf2; /* Borda azul pastel */
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s; /* Transição suave */
        }

            .custom-file-upload:hover {
                background-color: #b2ebf2; /* Azul pastel mais escuro ao passar o mouse */
                color: #fff; /* Cor do texto ao passar o mouse */
            }
    </style>
}

@section scripts {
    <script>
        $(document).ready(function () {
            $('#Genero').change(function () {
                if ($(this).val() === 'Masculino') {
                    $('#dispensaExercito').show();
                } else {
                    $('#dispensaExercito').hide();
                }
            });
        });

        function updateFileName(input, outputId) {
            var fileName = input.files.length > 0 ? input.files[0].name : '';
            document.getElementById(outputId).innerText = fileName;
        }
    </script>
}
