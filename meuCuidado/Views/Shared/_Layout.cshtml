<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - meuCuidado</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Estilos personalizados -->
    <link href="~/Content/estilos.css" rel="stylesheet" />

    @RenderSection("styles", required: false)

    <style>
        <text >
        footer {
            position: relative;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 10px 0;
            background-color: #f8f9fa;
            border-top: 1px solid black;
        }

        .body-content {
            padding-bottom: 60px;
        }

        #toaster.success {
            background-color: #4CAF50;
        }

        #toaster.error {
            background-color: #f44336;
        }

        </text >
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light bg-light" style="border-bottom: 1px solid black;">
        <div class="container">
            @Html.ActionLink("meuCuidado", "Login", "Login", null, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">@Html.ActionLink("Ajuda", "Ajuda", "Ajuda", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Configurações", "Configuracoes", "Configuracoes", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Toaster -->
    <div id="toaster" style="position: fixed; bottom: 20px; right: 20px; z-index: 1000; display: none; padding: 10px; border-radius: 5px; color: white; font-size: 14px; min-width: 200px; text-align: center;"></div>

    <!-- Conteúdo principal -->
    <div class="container body-content" style="padding: 20px;">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - meuCuidado</p>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Script do Toaster -->
    <script>
        function showToaster(message, type) {
            const toaster = $('#toaster');
            toaster.removeClass('success error').addClass(type).text(message).fadeIn();

            setTimeout(() => {
                toaster.fadeOut();
            }, 5000); // Exibe por 5 segundos
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
