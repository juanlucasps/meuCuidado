        margin-bottom: 15px;
    }

    .social-login-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }

    .btn-google, .btn-facebook {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-google {
        color: #db4437;
        background-color: white;
        border-color: #db4437;
    }

    .btn-facebook {
        color: #3b5998;
        background-color: white;
        border-color: #3b5998;
    }

    .btn-google:hover {
        background-color: #c23321;
        color: white;
    }

    .btn-facebook:hover {
        background-color: #2d4373;
        color: white;
    }

    .social-logo {
        width: 20px;
