@model meuCuidado.Dominio.ViewModels.AutenticacaoViewModel
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Senha")
        @Html.Password("senha", null, new { @class = "form-control" })
    </div>

    <hr style="color: white" />

    <button type="submit" class="btn btn-primary">Entrar</button>
}

<!-- Botões de login com Google e Facebook -->
<div class="social-login-buttons">
    <a href="@Url.Action("ExternalLogin", "Login", new { provider = "Google" })" class="btn btn-google">
        <img src="~/Imagens/gmail-logo.png" alt="Gmail Logo" class="social-logo" /> Entrar com Gmail
    </a>
    <a href="@Url.Action("ExternalLogin", "Login", new { provider = "Facebook" })" class="btn btn-facebook">
        <img src="~/Imagens/facebook-logo.png" alt="Facebook Logo" class="social-logo" style="border-radius: 3px" /> Entrar com Facebook
    </a>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger  mt-3">@ViewBag.ErrorMessage</div>
}

<p>
    Não tem uma conta? <a href="@Url.Action("Cadastro", "Cadastro")">Cadastre-se aqui</a>
</p>

<!-- Estilo minimalista -->
<style>
    .form-group {
        margin-bottom: 15px;
    }

    .social-login-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }

    .btn-google, .btn-facebook {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
        text-decoration: none;
    }

    .btn-google {
        color: #db4437;
        background-color: white;
        border-color: #db4437;
    }

    .btn-facebook {
        color: #3b5998;
        background-color: white;
        border-color: #3b5998;
    }

    .btn-google:hover {
        background-color: #c23321;
        color: white;
    }

    .btn-facebook:hover {
        background-color: #2d4373;
        color: white;
    }

    .social-logo {
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script>
    jQuery(document).ready(function($) {
        $('#loginForm').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '@Url.Action("Login", "Login")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (!response.success) {
                        $('#errorMessage').text(response.message).show();
                    }
                },
                error: function (xhr, status, error) {
                    console.log('Erro na tentativa de login' + error);
                }
             });
        });
    });
</script>