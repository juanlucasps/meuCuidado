@using meuCuidado.Dominio.Extensions
@model meuCuidado.Dominio.Models.CadastroViewModel
@{
    ViewBag.Title = "Cadastro";
    //Layout = "~/Views/Shared/_Layout.cshtml"; // Define o layout a ser usado
}

<div class="container">
    <h2>Cadastro</h2>

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Nome", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Usuario.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Endereço", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Usuario.Endereco, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Endereco, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Telefone", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Usuario.Telefone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Telefone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Email", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Usuario.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Senha", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Usuario.Senha, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Usuario.Senha, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tipo de Usuário", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.TipoUsuario, new SelectList(EnumExtension.ToSelectList<EnumExtension.TipoUsuario>(), "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TipoUsuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <hr />

    <!-- Botões de login com Google e Facebook -->
    <div class="social-login-buttons">
        <a href="@Url.Action("ExternalLogin", "Login", new { provider = "Google" })" class="btn btn-google">
            <img src="~/Imagens/gmail-logo.png" alt="Gmail Logo" class="social-logo" /> Cadastrar com Gmail
        </a>
        <a href="@Url.Action("ExternalLogin", "Login", new { provider = "Facebook" })" class="btn btn-facebook">
            <img src="~/Imagens/facebook-logo.png" alt="Facebook Logo" class="social-logo" style="border-radius: 3px" /> Cadastrar com Facebook
        </a>
    </div>

    <p>
        Já tem uma conta? <a href="@Url.Action("Login", "Conta")">Faça login aqui</a>
    </p>
</div>


<!-- Estilo minimalista -->
<style>
    .social-login-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }

    .btn-google, .btn-facebook {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-google {
        color: #db4437;
        background-color: white;
        border-color: #db4437;
    }

    .btn-facebook {
        color: #3b5998;
        background-color: white;
        border-color: #3b5998;
    }

    .btn-google:hover {
        color: white;
        background-color: #c23321;
    }

    .btn-facebook:hover {
        color: white;
        background-color: #2d4373;
    }

    .social-logo {
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }
</style>

