@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Email")
        @Html.TextBox("email", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Senha")
        @Html.Password("senha", null, new { @class = "form-control" })
    </div>

    <hr style="color: white" />

    <button type="submit" class="btn btn-primary">Entrar</button>
}

<hr />

<!-- Botões de login com Google e Facebook -->
<div class="social-login-buttons">
    <a href="@Url.Action("ExternalLogin", "Conta", new { provider = "Google" })" class="btn btn-google">
        <img src="~/Imagens/gmail-logo.png" alt="Gmail Logo" class="social-logo" /> Entrar com Gmail
    </a>
    <a href="@Url.Action("ExternalLogin", "Conta", new { provider = "Facebook" })" class="btn btn-facebook">
        <img src="~/Imagens/facebook-logo.png" alt="Facebook Logo" class="social-logo" style="border-radius: 3px"/> Entrar com Facebook
    </a>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger  mt-3">@ViewBag.ErrorMessage</div>
}

<p>
    Não tem uma conta? <a href="@Url.Action("Cadastro", "Conta")">Cadastre-se aqui</a>
</p>

<!-- Estilo minimalista -->
<style>
    .social-login-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }

    .btn-google, .btn-facebook {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-google {
        color: #db4437;
        background-color: white;
        border-color: #db4437;
    }

    .btn-facebook {
        color: #3b5998;
        background-color: white;
        border-color: #3b5998;
    }

    .btn-google:hover {
        color: white;
        background-color: #c23321;
    }

    .btn-facebook:hover {
        color: white;
        background-color: #2d4373;
    }

    .social-logo {
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }
</style>
