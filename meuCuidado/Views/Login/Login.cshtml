@model AutenticacaoViewModel
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Senha")
        @Html.Password("senha", null, new { @class = "form-control" })
    </div>

    <hr style="color: white" />

    <button type="submit" class="btn btn-primary">Entrar</button>
}

<hr />

<!-- Botões de login com Google e Facebook -->
<div class="social-login-buttons">
    <a href="@Url.Action("ExternalLogin", "Login", new { provider = "Google" })" class="btn btn-google">
        <img src="~/Imagens/gmail-logo.png" alt="Gmail Logo" class="social-logo" /> Entrar com Gmail
    </a>
    <a href="@Url.Action("ExternalLogin", "Login", new { provider = "Facebook" })" class="btn btn-facebook">
        <img src="~/Imagens/facebook-logo.png" alt="Facebook Logo" class="social-logo" style="border-radius: 3px" /> Entrar com Facebook
    </a>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger  mt-3">@ViewBag.ErrorMessage</div>
}

<p>
    Não tem uma conta? <a href="@Url.Action("Cadastro", "Cadastro")">Cadastre-se aqui</a>
</p>

<!-- Verifica se deve exibir o popup -->
@if (ViewBag.ShowPopup == true)
{
    <div class="modal fade show" id="authCodeModal" tabindex="-1" role="dialog" aria-labelledby="authCodeModalLabel" aria-hidden="true" style="display: block;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authCodeModalLabel">Autenticação de Dois Fatores</h5>
                    <button type="button" id="fecharPopUp" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.PopupMessage</p>
                    <div class="d-flex justify-content-center">
                        <!-- 5 quadradinhos para o código -->
                        @Html.TextBoxFor(m => m.Codigo1, new { @maxlength = "1", @class = "form-control m-1 text-center", style = "width: 50px; font-size: 24px;" })
                        @Html.TextBoxFor(m => m.Codigo2, new { @maxlength = "1", @class = "form-control m-1 text-center", style = "width: 50px; font-size: 24px;" })
                        @Html.TextBoxFor(m => m.Codigo3, new { @maxlength = "1", @class = "form-control m-1 text-center", style = "width: 50px; font-size: 24px;" })
                        @Html.TextBoxFor(m => m.Codigo4, new { @maxlength = "1", @class = "form-control m-1 text-center", style = "width: 50px; font-size: 24px;" })
                        @Html.TextBoxFor(m => m.Codigo5, new { @maxlength = "1", @class = "form-control m-1 text-center", style = "width: 50px; font-size: 24px;" })
                    </div>
                    <input type="hidden" id="email" value="@Model.Email" />
                </div>
                <div class="modal-footer">
                    <button type="button" id="confirmButton" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
}


<!-- Adicionando o jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script>
    jQuery(document).ready(function($) {
        // Foco no primeiro campo do código
        //$('#Codigo1').focus();

        // Avança automaticamente para o próximo campo de código quando preenchido
        $('input[type="text"]').on('input', function () {
            if ($(this).val().length == $(this).attr('maxlength')) {
                $(this).next('input').focus();
            }
        });


        // Lógica para envio do código de autenticação via AJAX
        $('#confirmButton').click(function (e) {
            e.preventDefault(); // Evita o envio tradicional do formulário

            let viewModel = {
                Codigo1: $('#Codigo1').val(),
                Codigo2: $('#Codigo2').val(),
                Codigo3: $('#Codigo3').val(),
                Codigo4: $('#Codigo4').val(),
                Codigo5: $('#Codigo5').val(),
                Email: $('#email').val() // Pega o e-mail do campo hidden, se aplicável
            };

            $.ajax({
                url: '@Url.Action("ValidarCodigoAutenticacao", "Login")', // URL correta do método no controller
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(viewModel),
                success: function (response) {
                    if (response.success) {
                        // Se o código for válido, redireciona para a Dashboard
                        window.location.href = response.redirectUrl;
                    } else {
                        // Se o código for inválido, exibe uma mensagem de erro
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Erro ao enviar os códigos."); // Tratamento de erro
                }
            });
        });

        $(document).on('click', '#fecharPopUp', function () {
            debugger;
            $('#authCodeModal').modal('hide');
        });
    });
</script>

